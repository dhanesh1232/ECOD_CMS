{
  "theme": {
    "name": "ECOD Blog",
    "theme_name": "ecod",
    "theme_author": "Dhanesh"
  },
  "settings": {
    "page_width": "1200px",
    "background_color": "#ff0000",
    "text_color": "#333333",
    "font_family": "Arial, sans-serif",
    "primary_color": "#007bff",
    "secondary_color": "#6c757d",
    "accent_color": "#28a745",
    "link_color": "#007bff",
    "button": {
      "background_color": "#007bff",
      "text_color": "#ffffff",
      "border_radius": "8px",
      "padding": "10px 20px",
      "hover": {
        "background_color": "#0056b3",
        "text_color": "#ffffff"
      },
      "shadow": "0px 4px 6px rgba(0, 0, 0, 0.1)"
    },
    "typography": {
      "heading_font": "Poppins, sans-serif",
      "body_font": "Arial, sans-serif",
      "heading_size": "24px",
      "body_size": "16px",
      "line_height": "1.6"
    },
    "layout": {
      "container_max_width": "1200px",
      "section_padding": "40px",
      "card_border_radius": "10px",
      "card_shadow": "0px 4px 8px rgba(0, 0, 0, 0.1)"
    }
  },
  "sections": {
    "header": {
      "background_color": "#ffffff",
      "text_color": "#333333",
      "logo_size": "180px",
      "nav_link_color": "#007bff",
      "nav_hover_color": "#0056b3"
    },
    "footer": {
      "background_color": "#333333",
      "text_color": "#ffffff",
      "link_color": "#f8f9fa"
    },
    "cards": {
      "background_color": "#f8f9fa",
      "text_color": "#333333",
      "border_radius": "8px",
      "shadow": "0px 4px 6px rgba(0, 0, 0, 0.1)"
    }
  },
  "pages": [
    {
      "name": "Home Page",
      "settings": [
        {
          "label": "Title",
          "id": "home_page_title",
          "value": "Welcome to ECOD Blog"
        },
        {
          "label": "Description",
          "id": "home_page_description",
          "value": "Discover the latest news, articles, and blog posts from the ECOD community"
        },
        {
          "label": "Hero Section Background",
          "id": "home_hero_bg",
          "value": "#f0f0f0"
        },
        {
          "label": "Hero Button Color",
          "id": "home_hero_button_color",
          "value": "#007bff"
        }
      ]
    },
    {
      "name": "About Page",
      "settings": [
        {
          "label": "Title",
          "id": "about_page_title",
          "value": "About ECOD Blog"
        },
        {
          "label": "Description",
          "id": "about_page_description",
          "value": "Learn more about our mission and goals."
        }
      ]
    }
  ]
}
